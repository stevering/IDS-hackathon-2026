{
  "name": "guardian-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "scripts": {
    "dev": "turbo run dev --filter=@guardian/web --filter=@guardian/mcp-server --filter=@guardian/figma-plugin",
    "dev:figma": "turbo run dev --filter=@guardian/figma-plugin",
    "dev:web": "turbo run dev --filter=@guardian/web",
    "dev:web:proxy": "turbo run dev:proxy --filter=@guardian/web",
    "dev:proxy": "turbo run dev:proxy",
    "dev:mcp": "turbo run dev --filter=@guardian/mcp-server",
    "dev:extension": "turbo run dev --filter=@guardian/chrome-extension",
    "build:extension": "turbo run build --filter=@guardian/chrome-extension",
    "dev:overlay": "turbo run dev --filter=@guardian/electron-overlay",
    "build:overlay": "turbo run build --filter=@guardian/electron-overlay",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@dotenv-run/cli": "^1.3.6",
    "turbo": "^2.3.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver",
      "electron"
    ]
  }
}
