{
  "name": "@guardian/figma-widget",
  "version": "1.0.0",
  "private": true,
  "description": "Guardian Widget for Figma â€” displays the mascot, opens the plugin, connects to the backend.",
  "scripts": {
    "build": "node build.mjs",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "tsc": "tsc --noEmit -p widget-src",
    "dev": "node build.mjs --watch"
  },
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "^1.0.0",
    "@figma/plugin-typings": "^1.123.0",
    "@figma/widget-typings": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./widget-src/tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
